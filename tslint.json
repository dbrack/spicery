{
    "rules": {
        "class-name": true,
        "comment-format": [true, "check-space"],
        "curly": true,
        "eofline": true,
        "forin": true,
        "indent": "spaces",
        "label-position": true,
        "no-any": false,
        "no-arg": true,
        "no-conditional-assignment": true,
        "no-console": true,
        "no-construct": true,
        "no-debugger": true,
        "no-duplicate-variable": true,
        "no-empty": false,
        "no-eval": true,
        "no-shadowed-variable": true,
        "no-switch-case-fall-through": true,
        "no-trailing-whitespace": true,
        "no-unused-expression": true,
        "no-use-before-declare": false,
        "no-var-keyword": true,
        "one-line": [true,
            "check-open-brace",
            "check-catch",
            "check-else",
            "check-whitespace"
        ],
        "quotemark": [true,
            "single",
            "avoid-escape"
        ],
        "radix": true,
        "semicolon": [true, "always"],
        "triple-equals": true,
        "variable-name": false,
        "whitespace": [true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-type"
        ]
    }
}
